% Command to create the title banner with left-aligned logo
\newcommand{\maketitlebar}[1]{%
  \noindent
  \colorbox{blue!20}{%
    \parbox{\dimexpr\linewidth-2\fboxsep}{%
      \vspace{1cm} % more top padding
      \begin{minipage}[c]{0.15\linewidth}
        \includegraphics[height=10cm]{img/uon.png}
      \end{minipage}%
      \hfill
      \begin{minipage}[c]{0.8\linewidth}
        \centering
        {\fontsize{60}{70}\selectfont\bfseries #1}\\[1em]
        {\fontsize{36}{42}\selectfont Eddie Liew \texttt{c3259452}}
        {\fontsize{36}{42}\selectfont Tristan Neverov \texttt{c3476555}}
        {\fontsize{36}{42}\selectfont Joshua Wagstaff \texttt{c3524789}}
        {\fontsize{36}{42}\selectfont Lucas Newman \texttt{c3500964}}
        {\fontsize{36}{42}\selectfont Leon Fardell \texttt{CC10032}}
      \end{minipage}
      \vspace{1cm} % more bottom padding
    }
  }%
  \vspace{1.5cm}
}

% Command to add a section
\newcommand{\addsection}[1]{%
  \section*{#1}
  \vspace{0.2em}
  \hrule
  \vspace{1em}
}

% Command to add a full-width figure
\newcommand{\addfigure}[2]{%
  \begin{center}
    \includegraphics[width=0.4\linewidth]{#1} \\
    {\footnotesize #2}
  \end{center}
  \vspace{1em}
}

% Command to create an info box
\newcommand{\addinfobox}[2]{%
  \begin{center}
    \colorbox{#1}{\parbox{0.9\linewidth}{\textbf{#2}}}
  \end{center}
  \vspace{1em}
}

% Environment for bar chart
\newenvironment{barchart}[1]{%
  \begin{center}
  \begin{tikzpicture}
  \begin{axis}[
    ybar,
    symbolic x coords={#1},
    xtick=data,
    ymin=0,
    ylabel={Value},
    xlabel={Category},
    bar width=15pt,
    nodes near coords,
    enlarge x limits=0.2
  ]
}{%
  \end{axis}
  \end{tikzpicture}
  \end{center}
}

% Command to create a pie chart
\newcommand{\addpiechart}[2]{%
  \begin{center}
    \textbf{#2} \\
    \begin{tikzpicture}
      \pie{#1}
    \end{tikzpicture}
  \end{center}
}
